pipeline {
    agent any
    environment {
        registry = 'lmekala/nodejsexample'
        registryCredential = 'docker_Creds'
        dockerImage = ''
        namespace = 'default'
        release = 'medxui'
        KUBECONFIG = '/home/lmekala/.kube/config'
    }
    stages  {
        stage('nodejs app Tests') {
            steps {
                echo 'Building npm app'
                sh 'npm install'
                // echo 'Run npm tests'
                // sh 'npm run'
            }
        }
        stage('Build docker image') {
            steps {
                script {
                    commitId = sh(returnStdout: true, script: 'git rev-parse HEAD')
                    commitId = "${commitId}".trim()
                    echo "commit id is - ${commitId} ----------- ${GIT_COMMIT}"
                    appImage = docker.build registry
                    docker.withRegistry('https://registry.hub.docker.com', registryCredential) {
                        appImage.push("${commitId}")
                        appImage.push("${env.BUILD_NUMBER}")
                    }
                }
            }
        }
        stage('Deploy helm chart') {
            steps {
                script {
                    echo "Deploying helm chart"
                    sh 'export KUBECONFIG=${KUBECONFIG}'
                    sh 'helm upgrade --install --namespace ${namespace} ${release} \
                --set image.repository=${registry} --set image.tag=${commitId} ui'
                    }
                }
        }
    }
}
